<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/card_background"
        android:elevation="5dp"
        android:gravity="center"
        android:text="Who is the 44th President of the United States?"
        android:textColor="@color/gray"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/flashcard_answer1"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_below="@+id/flashcard_question"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="52dp"
        android:background="@color/grown"
        android:gravity="center"
        android:text="Bill Clinton"
        android:textColor="@color/blue"
        android:textSize="30sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/flashcard_answer2"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_below="@id/flashcard_answer1"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="25dp"
        android:background="@color/grown"
        android:gravity="center"
        android:text="George H. W. Bush"
        android:textColor="@color/blue"
        android:textSize="30sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/flashcard_answer3"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_below="@+id/flashcard_answer2"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="25dp"
        android:background="@color/grown"
        android:gravity="center"
        android:text="Barack Oboma"
        android:textColor="@color/blue"
        android:textSize="30sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/eyes_off_filled"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/flashcard_question"
        android:layout_marginTop="500dp"
        app:srcCompat="@drawable/eyes_off_filled_foreground" />

    <ImageView
        android:id="@+id/eyes_filled"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="invisible"
        android:layout_below="@+id/flashcard_question"
        android:layout_marginTop="500dp"
        app:srcCompat="@drawable/eyes_filled_foreground" />

</RelativeLayout>